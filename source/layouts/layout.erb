<!doctype html>
<html>

  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title><%= page_title %></title>
    <meta name="description" content="<%= page_description %>">

    <!-- Twitter Card data -->
    <meta name="twitter:card" content="<%= page_description %>">
    <meta name="twitter:site" content="<%= data.settings.site.twitter_handle %>">
    <meta name="twitter:title" content="<%= page_title %>">
    <meta name="twitter:description" content="<%= page_description %>">
    <meta name="twitter:creator" content="<%= data.settings.site.creator_twitter_handle %>">
    <meta name="twitter:image" content="<%= page_image %>">

    <!-- Open Graph data -->
    <meta property="og:title" content="<%= page_title %>">
    <meta property="og:type" content="article">
    <meta property="og:url" content="<%= data.settings.site.base_url %><%= current_page.url %>">
    <meta property="og:image" content="<%= page_image %>">
    <meta property="og:description" content="<%= page_description %>">
    <meta property="og:site_name" content="<%= data.settings.site.title %>">

    <%= stylesheet_link_tag 'main' %>

    <link rel="shortcut icon" type="image/x-icon" href="<%= image_path('favicon.ico') %>">
  </head>

  <body>

    <%= partial 'partials/header' %>

    <%= yield %>

    <%= partial 'partials/footer' %>

    <%= javascript_include_tag 'jquery.min' %>
    <%= javascript_include_tag 'masonry.min' %>
    <%= javascript_include_tag 'main' %>

  </body>

</html>
